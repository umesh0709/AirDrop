@model IEnumerable<AirDrop.Models.CryptoInfo>

<html>
<body>
    <marquee>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s</marquee>

    <hr />
    <div>

    </div>
    <div class="main">
        <div class="flex-gainers">
            <div class="gainers-box"></div>
            <div class="gainers-box"></div>

        </div>

        <div class="flex-container">
            <a class="topdrop-text box" asp-area="" asp-controller="TopAirdrops" asp-action="Brave">
                <div class="upperbox" >
                   <img class="topdropimg" src="~/media/brave.png" />
                </div>
            </a>
            <a class="box">
                <div class="upperbox"></div>
            </a>

            <div class="viewallbox">
               
            </div>
        </div>




        <div class="current-airdrop-container">
            <h3 class="main-text">Current top airdrops</h3>
        </div>
        <div class="drop-info" >
         
            @foreach (var mod in Model)
            {
            <div class="container">
                
                <h4>@mod.Name</h4>
                <p>
                    @mod.Info
                </p>
                <h6 id="participatebtn">Join airdrop</h6>
                <a href="@mod.ParticipateLink">@mod.ParticipateLink</a>
                <div class="drop-info-end"></div>
            </div>
               
            }
            

        </div>


    </div>
    <div>
        <form asp-action="">
            <div style="text-align: center">
                <div class="">
                    <h3 class=" text-white">Never miss on new airdrop</h3>
                </div>
                <div >
                    <input class="emailadd" type="text" placeholder="Email address" name"mail" required />
                </div>
                <div >
                    <input class="emailsubmit" type="submit" value="Subscribe" />
                </div>
            </div>
           
        </form>
    </div>

</body>

</html>